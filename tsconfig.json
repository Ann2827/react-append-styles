{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "ES2015",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
//    "jsx": "react",
//    "sourceMap": true,
    "declarationDir": "./types"
  },
  "include": [
    "src"
  ]
}
